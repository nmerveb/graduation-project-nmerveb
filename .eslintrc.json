{
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "react-app", "prettier"
    ],
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "plugins": ["prettier"], 
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "rules": {
      "linebreak-style": 0,
      "prettier/prettier": ["error", { "endOfLine": "auto" }],
      "jsx-a11y/href-no-hash": [
        "off"
      ],
      "react/jsx-filename-extension": [
        "warn",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/prop-types": 0,
      "max-len": [
        "warn",
        {
          "code": 120,
          "tabWidth": 2,
          // "comments": (SET BY USER), - Maximum Line for Comment
          "ignoreComments": false,
          "ignoreTrailingComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreRegExpLiterals": true
        }
      ]
    }
  }